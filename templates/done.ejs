<!DOCTYPE html>
<html lang="pt-br">

<head>

  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Urgent flow</title>
  <!--Bootstrap link-->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  <!-- Bootstrap icons-->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <!--static CSS file-->
  <link rel="stylesheet" href="./styles/style.css">
  <!--Bootstrap javascript code-->
  <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
    crossorigin="anonymous"></script>
  <!--static script file-->
  <script defer src="/script.js"></script>
</head>

<body>
  <div class="d-flex justify-content-center">
    <div class="alert-messages">
      <div id="flash-message">
        <%- include("./partials/messages.ejs") %>
      </div>
    </div>
  </div>

  <!--Navbar-->
  <div class="container bg-light rounded-top-4 vh-100 mt-3">
    <nav class="nav navbar mb-3">
      <div class="container-fluid d-flex border-bottom">
        <ul class="nav nav-underline justify-content-start">
          <li class="nav-item ml-3">
            <a class="nav-link text-dark" href="/">Urgentes</a>
          </li>
          <li class="nav-item ml-3">
            <a class="nav-link active text-primary" href="#">Finalizados</a>
          </li>
        </ul>

        <div class="dropdown justify-content-end">
          <span class="dropdown-toggle mt-2 justify-content-end" type="button" data-bs-toggle="dropdown"
            aria-expanded="false">
            <div class="avatar">
              <%= user.charAt(0) %>
            </div>
          </span>
          <ul class="dropdown-menu dropdown-menu-end">
            <div class="row">
              <div class="col-auto">
                <div class="avatar-menu mt-1 ">
                  <%= user.charAt(0) %>
                </div>
              </div>
              <div class="col">
                <li class="mt-1">
                  <%= user %>
                </li>
                <li class="small  small link-opacity-75-hover mb-2"> <a href="/user/login">Desconectar</a> </li>
              </div>

              <div class="col-12">
                <!-- Only admin can add new user -->
                <% if(admin===true){ %>
                  <div class="border-top"></div>
                  <a href="/user/register" class="btn btn-dark btn-sm d-block mx-2 mt-3 mb-2"><i
                      class="bi bi-person-plus-fill me-2"></i>Add usuário</a>
                  <% } %>
              </div>

            </div>
          </ul>
        </div>
      </div>

    </nav>

    <% for (let i=0; i < requests.length; i++) { %>
      <div id="<%=requests[i]._id%>" class="card mb-3">
        <div class="container">
          <div class="row">
            <div class="col-2 text-center mt-1">
              <span class="day display-5 ">
                <%= requests[i].date.getUTCDate() %>
              </span>
              <div>
                <span class="month">
                  <%= requests[i].date.toLocaleString("pt-br", { month: 'short' }) %>
                </span>
                <br>
                <span class="year">
                  <%= requests[i].date.getFullYear() %>
                </span>
              </div>
            </div>

            <div class="col border-start">
              <div class="row mt-2">
                <div class="col">
                  <div class="mb-2"> <span>Nome: </span>
                    <%= requests[i].name %>
                  </div>
                </div>
                <div class="col">
                  <div> <span>Representante: </span>
                    <%= requests[i].representative %>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col">
                  <div class="mb-2"> <span>N° do Pedido: </span>
                    <%= requests[i].requestNumber %>
                  </div>
                </div>
                <div class="col">
                  <div> <span>Envio: </span>
                    <%= requests[i].shipping %>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="card-footer text-muted">
                  <div class="description-container d-flex justify-content-between align-items-center">
                    <span>Descrição: <%= requests[i].description %></span>
                    <div>
                      <div class="row">
                        <div class="col d-flex justify-content-between align-items-center">

                          <!-- Only expedition can delete and restore request-->
                          <% if(role==="expedition" || role==="guest" ){ %>
                            <form method="POST" action="/restore/<%= requests[i]._id %>">
                              <button class="btn btn-secondary restore btn-sm me-2">
                                <i class="bi bi-arrow-counterclockwise me-1"></i>Restaurar
                              </button>
                            </form>

                            <form method="POST" action="/done/<%= requests[i]._id %>/?_method=DELETE">
                              <button class="btn btn-danger delete btn-sm" type="submit">
                                <i class="bi bi-x-circle me-1"></i>Deletar
                              </button>
                            </form>
                            <% } %>

                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% } %>

        <footer>
          <p class="text-center pt-2">&copy; Leonardo Anders</p>
        </footer>
</body>

</html>